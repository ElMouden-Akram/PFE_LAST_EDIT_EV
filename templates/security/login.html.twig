{% endblock %}

{% block navbar %}{% endblock %} {# ðŸ”¥Pour ne pas avoir une navbarðŸ”¥ #}
{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">from html (edit this later): {{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="box">
        <div class="header"><span>s'authentifier</span></div>
            <div class="input"> 
                <input type="text" name="username" class="cne"  value="{{ last_username }}" placeholder="CNE">
                <input type="password" class="cni" placeholder="CNI" name="password" autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
            {# <div class="cn"><a href="javascript: submit();" class="connexion" type="submit">connexion</a></div> #}
            <button type="submit">Sign in</button>
    </div>
</form>
{% endblock %}


